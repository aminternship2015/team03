@model Models.TweetsModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>
    <script src="~/Scripts/jquery-1.7.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    
    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
    
        <fieldset>
            <legend>Tweet form</legend>
            <div class="editor-field">
                @Html.HiddenFor(model => model.id_user)
            </div>
   
            <div class="editor-field">
                @Html.HiddenFor(model => model.id_tweet)
            </div>            
            <div class="editor-label">
                @Html.LabelFor(model => model.Tweet)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Tweet, new {@class= "panel panel-default"})
            </div>
                @Html.ValidationMessageFor(model => model.Tweet)
    
            <p>
                <input type="submit" value="Save" />
            </p>
        </fieldset>
    }
    
</body>
</html>
